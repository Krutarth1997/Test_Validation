{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "comments": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "version": {
            "type": "number"
        },
        "simulation_parameters": {
            "type": "object",
            "properties": {
                "fps": {
                    "type": "number"
                },
                "time_step": {
                    "type": "number"
                },
                "number_agents": {
                    "type": "number"
                },
                "simulation_time": {
                    "type": "number"
                }
            },
            "required": ["fps", "time_step", "number_agents", "simulation_time"]
        },
        "motivation_parameters": {
            "type": "object",
            "properties": {
                "normal_v_0": {
                    "type": "number"
                },
                "normal_time_gap": {
                    "type": "number"
                }
            },
            "motivation_doors": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "id": {
                            "type": "number"
                        },
                        "label": {
                            "type": "string"
                        },
                        "vertices": {
                            "type": "array",
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "minItems": 2,
                                "maxItems": 2
                            },
                            "minItems": 2,
                            "maxItems": 2
                        }
                    },
                    "required": ["id", "vertices", "label"]
                },
                "minItems": 1,
                "maxItems": 1
            },
            "required": ["normal_v_0", "normal_time_gap", "motivation_doors"]
        },
        "grid_parameters": {
            "type": "object",
            "properties": {
                "min_v_0": {
                    "type": "number"
                },
                "max_v_0": {
                    "type": "number"
                },
                "v_0_step": {
                    "type": "number"
                },
                "min_time_gap": {
                    "type": "number"
                },
                "max_time_gap": {
                    "type": "number"
                },
                "time_gap_step": {
                    "type": "number"
                }
            },
            "required": ["min_v_0", "max_v_0", "v_0_step", "min_time_gap", "max_time_gap", "time_gap_step"]
        },
        "accessible_areas": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "vertices": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 2,
                            "maxItems": 2
                        }
                    }
                },
                "required": ["id", "vertices"]
            }
        },
        "destinations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "label": {
                        "type": "string"
                    },
                    "vertices": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 2,
                            "maxItems": 2
                        }
                    }
                },
                "required": ["id", "vertices", "label"]
            }
        },   
        "velocity_model_parameter_profiles": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "time_gap": {
                        "type": "number"
                    },
                    "tau": {
                        "type": "number"
                    },
                    "v0": {
                        "type": "number"
                    },
                    "radius": {
                        "type": "number"
                    }
                },
                "required": ["id", "time_gap", "tau", "v0", "radius"]
            }
        },
        "way_points": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "coordinates": {
                        "type": "array",
                        "items": {
                            "type": "number"
                        },
                        "minItems": 2,
                        "maxItems": 2
                    },
                    "distance": {
                        "type": "number"
                    }
                },
                "required": ["coordinates", "distance"]
            }
        },
        "distribution_polygons": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number"
                    },
                    "vertices": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            },
                            "minItems": 2,
                            "maxItems": 2
                        }
                    }
                },
                "required": ["id", "vertices"]
            }
        }
    },
    "required": ["version", "simulation_parameters", "accessible_areas", "destinations", "velocity_model_parameter_profiles", "way_points", "distribution_polygons"]
}
